#!/bin/sh

case $1 in
  lock)
    loginctl lock-session
    ;;
  logout)
    session=`loginctl session-status | awk 'NR==1{print $1}'`
    loginctl terminate-session $session
    ;;
  suspend)
    systemctl suspend
    ;;
  reboot)
    systemctl reboot
    ;;
  poweroff)
    systemctl poweroff
    ;;
esac

exit 0
